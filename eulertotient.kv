<MainWindow>:
    pos : 0,0
    size : root.width, root.height

    Label:
        text: "Euler Totient Function"
        pos_hint: {'x': .1, 'y': .8}
        size_hint: .8,.2
        font_size: 40
        padding: (100,100)

    Label:
        text: "Enter the number to find the euler's totient values"
        pos_hint: {'x': .1,'y':.65}
        size_hint: .8,.1
        font_size: 18

    TextInput:
        id: input
        multiline: False
        pos_hint: {'x': .2 , 'y': .6}
        size_hint: .6,.05

    Button:
        text : 'Submit'
        pos_hint : {'x': .3 ,'y': .48}
        size_hint : .4, .1
        on_press: root.on_btn_click()

    Label:
        id: output
        text: "Output shown here"
        pos_hint: {'x': .1,'y':.3}
        size_hint: .8,.1
        font_size: 18
     